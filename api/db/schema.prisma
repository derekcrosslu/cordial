model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  role                Role      @default(USER)
}

model Reserva {
    id        Int   @id @default(autoincrement())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    nombre     String
    area       String
    invitados  Int
    numeracion String[]
    mesa       Int
    fecha      DateTime 
    telefono   String
    email      String?   @unique
}

enum Role {
  USER
  ADMIN
}